<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
    <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Link</th>
            <th>Image</th>
          </tr>
        </thead>
        <tbody>
        <% allposts.forEach(function(post) { %>
          <tr>
            <td><%= post._id %></td>
            <td><%= post.title %> </td>
            <td><%= post.content %></td>
            <td><%= post.link %></td>
            <td><% if(post.image){ %>
              <img src="./uploads/<%= post.image %>" alt="Page image">
           <% } %></td>
          </tr>

          <% }); %>
        </tbody>
      </table>
</main>

<footer>
  
</footer>

</body>
</html>
