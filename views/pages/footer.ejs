<!DOCTYPE html>
<html>
 <%- include('../template/header'); %>
<style>
/* Styling the .validate error message. */
label.error {
    color: red;
    /* color: #a94442; */
    /* background-color: #f2dede;
    border-color: #ebccd1;
    padding: 1px 20px 1px 20px; */
}

.banner_success p {
    background-color: #00a65a !important;
    font-size: 14px;
    padding: 6px 0;
}

.banner_success {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    background-color: unset !important;
}
</style>

<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">

        <%- include('../template/top_menu'); %>
        <%- include('../template/left_nav'); %>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>Footer management</h1>
                <ol class="breadcrumb">
                    <li><a href="/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li class="active">Footer Management</li>
                </ol>
               
            </section>


            <!-- Main content -->
            <section class="content" style="margin-top:20px;">
                <!-- Default box -->
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Edit Footer</h3>
                    </div>
                    <% if(msg != ''){ %>

                        <p style="text-align: center"><%= msg %></p>
                        <% } %>
                    <!-- form start -->
                    <form class="form-horizontal" action="/footer/"  method="post" >
                        <div class="box-body">
                            <input type="hidden" name="facebook_id" value="<%= fb_dtl._id %>">
                            <input type="hidden" name="instagram_id" value="<%= insta_dtl._id %>">
                            <input type="hidden" name="linkedin_id" value="<%= lin_dtl._id %>">
                            <input type="hidden" name="text_id" value="<%= footer_text._id %>">
                            <div class="row">
                            <div class="col-sm-6">    
                            <div class="form-group">
                                <label for="category_name" class="col-sm-3 control-label">Facebook : </label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="f_link" placeholder="Enter link" value="<%= fb_dtl.link %>" >
                                </div>
                            </div>
                            </div>
                            <div class="col-sm-6">
                            <div class="form-group">
                                <label for="category_name" class="col-sm-2 control-label">Priority: </label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control" name="f_priority" placeholder="Enter priority" value="<%= fb_dtl.priority %>" >
                                </div>
                            </div>
                            </div> 
                            </div>
                           
                            <div class="row">
                            <div class="col-sm-6">    
                            <div class="form-group">
                                <label for="category_name" class="col-sm-3 control-label">Instagram : </label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="insta_link" placeholder="Enter link" value="<%= insta_dtl.link %>" >
                                </div>
                            </div>
                            </div>
                            <div class="col-sm-6">
                            <div class="form-group">
                                <label for="category_name" class="col-sm-2 control-label">Priority: </label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control" name="i_priority" placeholder="Enter priority" value="<%= insta_dtl.priority %>">
                                </div>
                            </div>
                            </div> 
                            </div>

                            <div class="row">
                            <div class="col-sm-6">    
                            <div class="form-group">
                                <label for="category_name" class="col-sm-3 control-label">Linkedin : </label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="l_link" placeholder="Enter link" value="<%= lin_dtl.link %>" >
                                </div>
                            </div>
                            </div>
                            <div class="col-sm-6">
                            <div class="form-group">
                                <label for="category_name" class="col-sm-2 control-label">Priority: </label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control" name="l_priority" placeholder="Enter priority" value="<%= lin_dtl.priority %>">
                                </div>
                            </div>
                            </div> 
                            </div>

                            <div class="row">
                            <div class="col-sm-12"> 
                            <div class="form-group">
                                <label for="category_name" class="col-sm-2 control-label">Footer Text: </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="footerText"
                                        placeholder="Enter footer text" value="<%= footer_text.footer_text %>" required>      
                                </div>
                            </div>
                            </div>
                            </div>
                            
                    

                       
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn  pull-right" name="submit" id="submit"
                                value="submit" style="background-color: #463077;color: white; outline:none;">UPDATE</button>
                        </div>
                        <!-- /.box-footer -->
                    </form>

                </div>
                <!-- /.box -->
            </section>
            <!-- /.content -->

        </div>
       
    </div>
    <!-- ./wrapper -->
    <%- include('../template/footer'); %>
</body>

</html>